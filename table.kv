<TableView@ScrollView>:
	canvas:
		Color:
			rgb: 0, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
    #self.layout.spacing = 10, 10

<TableView@ScrollView@GridLayout>:
    spacing: 10, 10

<TableRow>:
	#size_hint: 1, None
	size: self.width, pt(8)
    #padding: 0, 0, 0, 0
	#padding: pt(1), pt(1), pt(1), pt(1)
	#valign: "center"
	canvas.before:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
	canvas:
		Color:
			rgb: 1, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size

<TableCell>:
	size_hint: 1, pt(8)
	#size: self.width, pt(8)
	size: 4*pt(8), pt(8)
	font_size: pt(6)
	#font_name: "DejaVuSansMono"
	border: 0, 0, 0, 0
	#padding: pt(1), pt(1), pt(1), pt(1)
	spacing: 0, 0
	hint_text: self.column.hint_text
	multiline: False
	background_color: 0.8, 0.8, 0.8, 1
	foreground_color: 0.2, 0.2, 0.7, 1
	readonly: True
	canvas.before:
	    Color:
	        rgb: 0.2, 0.4, 0.4
	    Rectangle:
	        pos: self.pos
	        size: self.size
